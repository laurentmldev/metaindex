<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD  
 Struts Configuration 2.1//EN"   
"http://struts.apache.org/dtds/struts-2.1.dtd">  
<struts>  
	<constant name="struts.devMode" value="true" />
	<constant name="struts.action.excludePattern" value="/wsmx.*,/public/commons/.*,/logoutprocess,/loginprocess" /> 
 	<constant name="struts.multipart.maxSize" value="2000000" />
      
	<package name="metaindex" extends="struts-default">  
	
	<global-results>
     <result name="BeanProcess_AUTHERROR">/public/commons/errors/ProcessErrorAuth.jsp</result>
     <result name="BeanProcess_ERROR">/public/commons/errors/ProcessError.jsp</result>
     <result name="BeanProcess_DBERROR">/public/commons/errors/ProcessErrorDB.jsp</result>
	</global-results>
 
<global-exception-mappings>
 <exception-mapping exception="org.apache.struts.register.exceptions.SecurityBreachException" result="BeanProcess_AUTHERROR" />
 <exception-mapping exception="org.springframework.jdbc" result="BeanProcess_DBERROR" /> 
 <exception-mapping exception="java.lang.Exception" result="BeanProcess_ERROR" />  
</global-exception-mappings>

		
		<action name="welcome" class="metaindex.data.userprofile.beans.BeanProfile">
			<result name="BeanProcess_SUCCESS" >/public/welcome.jsp</result>			
		</action>
		<action name="" class="metaindex.data.userprofile.beans.BeanProfile">
			<result name="BeanProcess_SUCCESS" >/public/login.jsp</result>			
		</action>
		<action name="loginform" class="metaindex.data.userprofile.beans.BeanProfile">
			<result name="BeanProcess_SUCCESS" >/public/login.jsp</result>  		
		</action>  		
		<action name="loginprocess" class="metaindex.data.userprofile.beans.BeanProfile">
			<result name="BeanProcess_SUCCESS" >/secure/catalogs/main.jsp</result>  		
		</action>  		
		<action name="Catalogs" class="metaindex.data.userprofile.beans.BeanProfile">
			<result name="BeanProcess_SUCCESS" >/secure/catalogs/main.jsp</result>  			
		</action> 
		<action name="Items" class="metaindex.data.userprofile.beans.BeanProfile">
			<result name="BeanProcess_SUCCESS" >/secure/items/main.jsp</result>  			
		</action>
		<action name="Statistics" class="metaindex.data.userprofile.beans.BeanProfile">
			<result name="BeanProcess_SUCCESS" >/secure/statistics/main.jsp</result>  			
		</action> 
		<action name="Files" class="metaindex.data.userprofile.beans.BeanProfile">
			<result name="BeanProcess_SUCCESS" >/secure/files/main.jsp</result>  			
		</action> 
		
	</package>  
</struts>      
