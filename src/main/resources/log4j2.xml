<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Properties>
        <Property name="basePath">#{systemEnvironment['mx.logs.path']}</Property>
        <Property name="DispatcherServlet#enableLoggingRequestDetails">true</Property>
        
    </Properties>
 
    <Appenders>
        <RollingFile name="metaindex-file-logger" fileName="${basePath}/metaindex-server.log" filePattern="${basePath}/metaindex-server-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
 
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout   pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>    	
        <Logger name="org.springframework.context" level="info" additivity="false">
        	<appender-ref ref="console" /> 
        </Logger>
        <Logger name="org.springframework.web" level="info" additivity="false">
        	<appender-ref ref="console" /> 
        </Logger>
        <Logger name="org.springframework.messaging" level="info" additivity="true">
        	<appender-ref ref="console" /> 
        </Logger> 
        <Root level="info" additivity="false">
            <appender-ref ref="console" />
            <appender-ref ref="metaindex-file-logger" level="info" />
        </Root>
    </Loggers>
</Configuration>
