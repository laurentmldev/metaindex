<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="username">
        <field-validator type="requiredstring">
        	<message key="createProfile.error.emptyusername" />
        </field-validator>
    </field>

    <!-- Strange : does not getPassword() from the Bean and then return error 
     field name="password">
        <field-validator type="requiredstring">
            <message key="createProfile.error.emptypassword"/>
        </field-validator>
    </field-->
    
    <field name="email">
        <field-validator type="requiredstring">
            <message key="createProfile.error.emptyemail"/>
        </field-validator>
        <field-validator type="email">
            <message key="createProfile.error.invalidemail"/>
        </field-validator>
    </field>
     
    <field name="acceptConditions">
        <field-validator type="fieldexpression">
        	<param name="expression">acceptConditions=='on'</param>
        <message key="createProfile.error.emptytermsandconditions"/>
    	</field-validator>
    </field>
   
</validators>
